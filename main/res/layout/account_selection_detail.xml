<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/accTypeTextView"
        android:layout_width="247dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:text="Account Type"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/accNumTextView"
        android:layout_width="247dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/accTypeTextView"
        android:layout_below="@+id/accTypeTextView"
        android:text="Account Number"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/accBalTextView"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/accTypeTextView"
        android:text="Balance"
        android:textSize="20sp" />
</RelativeLayout>